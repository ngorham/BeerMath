<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ounce_to_ounce_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ounce_to_ounce"
        app:layout_constraintBottom_toBottomOf="@id/ounce_to_pint_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/ounce_to_pint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ounce_to_pint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ounce_to_ounce_text" />

</android.support.constraint.ConstraintLayout>